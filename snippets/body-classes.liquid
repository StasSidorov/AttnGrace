{% capture body_classes %}
template-{{ template | replace: '.', ' ' | replace: '_', '-' | truncatewords: 1, '' | handle }} 

{% if template contains 'customers' %}
  template-account-page
{% endif %}

{% if customer %}
  customer-logged-in
{% endif %}

{% if template.name contains 'product' and false %}
  product-sidebar-visible product-{{ template.suffix }}
{% endif %}

{% if template.name contains 'cart' %}
  template-cart-page
{% endif %}

{% if template == 'page.find-your-quiz' %}
  template-quiz
{% endif %}

{% if template == 'page.quiz-recommendation' %}
  template-quiz-recommended
{% endif %}

{% endcapture %}
{{ body_classes | strip_newlines }}
