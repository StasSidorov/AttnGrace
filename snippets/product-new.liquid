        <script>
            $(document).ready(function(){
                $('.product-gallery-slider').slick({
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    arrows: true,
                    fade: true,
                   //draggable:false,
                    // loop: true,
                    // infinite:true,
                    asNavFor: '.product-gallery-thumbs',
                    responsive: [
                        {
                        breakpoint: 576,
                        settings: {
                            // variableWidth: true,
                            fade: false,
                            slidesToShow: 1,
                          
                        }
                        }
                    ]
                });
                
                $('.product-gallery-thumbs').slick({
                    slidesToShow: 5,
                    slidesToScroll: 1,
                    arrows: false,
                    // loop: true,
                    // draggable:false,
                    // infinite:true,
                    asNavFor: '.product-gallery-slider',
                    —ÅenterMode: true,
                    focusOnSelect: true,
                  
                });
    
                // Change quantity 
                $('.quantity__btn').click(function(event) {
                    let n = parseInt($(this).parent().find('.quantity__value').val());
                    if($(this).hasClass('btn_minus')){
                        n = n - 1;
                        if(n < 1){n = 1;}
                    }else{
                        n = n + 1;
                    }
                    $(this).parent().find('.quantity__value').val(n);
                    return false;
                });
            }); 
        </script>
    
    
    
    
    
