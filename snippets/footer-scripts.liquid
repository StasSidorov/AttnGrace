<!-- Scripts -->
{% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
{% endif %}

{% if template contains 'gift_card' %}
  {{ 'vendor/qrcode.js' | shopify_asset_url | script_tag }}
  {{ 'giftcard.js' | asset_url | script_tag }}
{% endif %}

<script src="{{ 'vogue.js' | asset_url }}"
  data-scripts
  data-shopify-api-url="{{ 'api.jquery.js' | shopify_asset_url }}"
  data-placeholder-ie9="{{ 'jquery.placeholder.min.js' | asset_url }}"
  data-shopify-currencies="//cdn.shopify.com/s/javascripts/currencies.js"
  data-shopify-countries="/services/javascripts/countries.js"
  data-shopify-common="{{ 'shopify_common.js' | shopify_asset_url }}"
  data-shopify-cart="{{ 'jquery.cart.min.js' | asset_url }}" defer
></script>

<script src="{{ 'slick.min.js' | asset_url }}" defer></script>
<script src="{{ 'blowup.min.js' | asset_url }}" defer></script>
<script src="{{ 'jquery.jfontsize.js' | asset_url }}" defer></script>
<script src="{{ 'custom.js' | asset_url }}" defer></script>
<script>
  (function () {
    function handleFirstTab(e) {
      if (e.keyCode === 9) { // the "I am a keyboard user" key
        document.body.classList.add('user-is-tabbing');
        window.removeEventListener('keydown', handleFirstTab);
      }
    }
    window.addEventListener('keydown', handleFirstTab);
  })();
</script>