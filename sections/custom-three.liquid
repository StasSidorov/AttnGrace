<style>
  .custom4Row {
    background-color: #FBF5EF; /* Adds a background color to the entire section */
    margin: 0;
    padding: 0;
    /* margin-bottom: -17px; */
    height: auto;
    display: flex; /* Use flexbox to create columns */
    flex-direction: row; /* Align items in a row */
    justify-content: space-between; /* Space out the columns */
    align-items: center; /* Center items vertically */
  }

  .custom4Row .content {
    width: 60%;
    margin-left: 200px; /* Adjust margin to shift content to the right */
  }

  .custom4Row .image-container {
    width: 50%;
    text-align: right; /* Align the image to the right */
    margin: 0;
  }

  .custom4Row .image-container img {
    width: 500px; /* Set the specific width */
    height: 480px; /* Set the specific height */
    object-fit: cover; /* Ensure the image covers the specified dimensions */
    display: block;
    margin: auto;
  }

  .custom4Row-container h3 {
    padding-top: 20px;
    margin: 0; /* Reset margin for consistent spacing */
  }

  .custom4Row-container .bold-text-paragraph {
    margin-top: 40px;
  }

  .custom4Row-container p {
    margin: 0; /* Reset margin for consistent spacing */
  }

   .bold-text-paragraph {
    font-size: 20px; /* Increased font size */
    background-color: #DBD239; /* Add background color */
    display: inline-block; /* Ensure padding and background apply correctly */
    border-radius: 0px; /* Add rounded corners */
  }

  .detailed-text-paragraph {
    margin-top: 0; /* Removes the top margin to further decrease the gap */
    margin-left: 0;
    margin-right: 70px;
    padding-bottom: 20px;
    font-size: 20px; /* Increased font size */
  }

  /* Styles specifically for mobile */
  @media (max-width: 768px) {
    .custom4Row {
      padding: 1rem;
      flex-direction: column; /* Stack items vertically on mobile */
    }

    .custom4Row .content {
      width: 98%;
      text-align: left;
      margin: 12px;
    }

    .detailed-text-paragraph {
      margin-left: 0;
      margin-right: 12px;
    }

    .custom4Row .image-container {
      width: 100%;
      text-align: center; /* Center the image on mobile */
    }
  }
</style>

<div class="custom4Row">
  <div class="content">
    <div class="row">
      <h3 style="font-family: BentonMod, sans-serif; font-size: 40px; line-height: 42px; color: #000; font-weight: normal; padding-top: 20px;">
        {{ section.settings.main_title }}
      </h3>
    </div>
    <div class="row">
      <p style="font-family: sans-serif; font-size: 22px; line-height: 24px;">
        Email us at <a href="mailto:hello@attngrace.com" style="text-decoration: underline;">hello@attngrace.com</a> or
        call/text us at 833.713.9212.
      </p>
    </div>
    <div class="row custom4Row-container">
      <p class="bold-text-paragraph">
        <strong>{{ section.settings.bold_line_text }}</strong>
      </p>
      <p class="detailed-text-paragraph">{{ section.settings.detailed_text }}</p>
    </div>
  </div>
  <div class="image-container">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="Description of Image">
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Three",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "Your Main Title Here"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sub Text",
      "default": "Your descriptive text here."
    },
    {
      "type": "text",
      "id": "bold_line_text",
      "label": "Bold Line Text",
      "default": "Your bold line text here."
    },
    {
      "type": "textarea",
      "id": "detailed_text",
      "label": "Detailed Text",
      "default": "Your detailed information here, which can span up to 3 lines."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Custom Three",
      "category": "Custom"
    }
  ]
}
{% endschema %}
