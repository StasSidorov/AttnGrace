<!-- sections/separator-section.liquid -->
<section class="separator-section">
  <div class="separator-container">
    <img src="{{ section.settings.separator_image | img_url: '1440x84' }}" alt="Separator Image">
  </div>
</section>

<!-- CSS styling -->
<style>
.separator-section {
  text-align: center;
  margin: 0; /* Remove margin */
  padding: 0; /* Remove padding */
}
.separator-container img {
  width: 100%;
  max-width: 100%;
  height: 100%;
  display: block; /* Ensure there are no inline gaps */
}
</style>

<!-- Section settings -->
{% schema %}
{
  "name": "Separator Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "separator_image",
      "label": "Separator Image"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
