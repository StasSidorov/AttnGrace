{{ 'style3l.css' | asset_url | stylesheet_tag }} 
<section class="promo promo_reasons">
  <div class='center-wrapper'>
      <h1 class="promo__title">{{ section.settings.heading }}</h1>
      <h2 class="promo__subtitle">{{ section.settings.subheading }}</h2>
      <div class="promo__text">{{ section.settings.text }}</div>
      <a href="{{ section.settings.btn-link }}" class="promo__btn btn">{{ section.settings.btn-label }}</a>
      <div class="promo__note">{{section.settings.subtext}}</div>
  </div>
  <div class="promo__image">{{ section.settings.image | img_url : 'master' | img_tag }}</div>
</section>

{% schema %}
  {
    "name": "Listicle",
    "settings": [
      {
        "type" : "image_picker",
        "id" : "image",
        "label" : "Image"
      },
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Heading",
        "default" : "5 Reasons"
      },
       {
        "type" : "text",
        "id" : "subheading",
        "label" : "SubHeading",
        "default" : "Attn: Grace makes living<br> with incontinence easier."
      },
      {
        "type" : "text",
        "id" : "text",
        "label" : "Text",
        "default" : "You're here because you want to find<br> a better way to manage your bladder leaks.<br> Attn: Grace is here to help."
      },     
       {
            "type" : "text",
            "id" : "btn-label",
            "label" : "Button Label",
            "default"   : "GET 30% OFF YOUR FIRST ORDER"
        },
        {
            "type" : "url",
            "id" : "btn-link",
            "label" : "Button Link"
        },
      {
            "type" : "text",
            "id" : "subtext",
            "label" : "SubText",
            "default" : "*Discount automatically applied at checkout"
        }
    ]
  }
{% endschema %}

