<section class="faq">
  <div class='center-wrapper'>
      <div class="faq__row">
          <div class="faq__leftside">
              <div class="faq__image">{{section.settings.image | img_url: 'master' | img_tag }}</div>
          </div>
          <div class="faq__rightside">
              <h2 class="faq__title title_2">{{section.settings.heading}}</h2>
              <div class="faq__subtitle"><a href="https://attngrace.com/tools/faqs">{{section.settings.subheading}}</a></div>
              <div class="faq__list">
                {% for block in section.blocks %}
                  <div class="faq-item {% if forloop.first %} active{% endif %}">
                      <div class="faq-item__title">{{block.settings.question}}
                      <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon-plus">
                      <path d="M8.12504 9.4943H0.833374V7.7443H8.12504V0.452637H9.87504V7.7443H17.1667V9.4943H9.87504V16.786H8.12504V9.4943Z" fill="black"/>
                      </svg>
                      <svg width="18" height="3" viewBox="0 0 18 3" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon-minus">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M8.12504 2.49414H0.833374V0.744141H8.12504H9.87504H17.1667V2.49414H9.87504H8.12504Z" fill="black"/>
                      </svg>

              </div>
                      <div class="faq-item__content" {% if forloop.first %} style="display: block;{% endif %}">
                          <div class="faq-item__content-body">
                              <div class="faq-item__text">{{block.settings.answer}}</div>
                          </div>
                      </div>
                  </div>
                {% endfor %}
                
              </div>
          </div>
      </div>
  </div>
</section>

<script>
  $(function () {
    let el = $('.faq-item__title');
    el.click(function() {
        let checkedElement = $(this).next(),
            visibleElement = $('.faq-item__content:visible');
            
        visibleElement.stop().animate({'height':'toggle'}, 300).parent().removeClass('active');     
        if((checkedElement.is('.faq-item__content')) && (!checkedElement.is(':visible'))) {
            checkedElement.stop().animate({'height':'toggle'}, 300).parent().addClass('active');
            return false;
        }   
        if((checkedElement.is('.faq-item__content')) && (checkedElement.is(':visible'))) {
            return false;
        }
    });
});
</script>
{% schema %}
  {
    "name": "New product FAQ",
    "settings": [
      {
        "type" : "image_picker",
        "id" : "image",
        "label" : "Image"
      },
    {
      "type" : "text",
      "id" : "heading",
      "label" : "Heading",
      "default"   : "All your questions answered"
    },
    {
      "type" : "text",
      "id" : "subheading",
      "label" : "Subheading",
      "default" : "And if theyâ€™re not, take a look at our FAQs."
    }
    ],
    "blocks" : [
      {
        "type" : "text",
        "name"  : "QA",
        "settings" : [
          {
            "type" : "text",
            "id" : "question",
            "label" : "Question",
            "default" : "How can I get free shipping?"
          },
          {
            "type" : "text",
            "id" : "answer",
            "label" : "Answer",
            "default" : "We offer Free Shipping on orders over $45 for the contiguous US. We offer standard and expedited shipping within the contiguous US. We also encourage our AK, HI and PR customers to order via Amazon. If you do want to order from us directly our site will calculate your shipping at checkout. "
          }
        ]
      }
    ]
  }
{% endschema %}