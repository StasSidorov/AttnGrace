          const isShowingMore = showMoreButton.textContent === 'SHOW MORE';

          // Toggle visibility of ingredients
          ingredients.forEach(function (ingredient, index) {
            if (index >= 2) {
              ingredient.classList.toggle('show-less');
            }
          });

          // Toggle button text and icon rotation
          showMoreButton.textContent = isShowingMore ? 'SHOW LESS' : 'SHOW MORE';
          showMoreIcon.style.transform = isShowingMore ? 'rotate(180deg)' : 'rotate(0deg)';

          // Adjust the height of the ingredient section
          section.style.height = isShowingMore ? section.scrollHeight + 'px' : initialHeight + 'px';
        }

        // Add event listeners to both the text and the icon
        showMoreButton.addEventListener('click', toggleIngredients);
        showMoreIcon.addEventListener('click', toggleIngredients);
      } else {
        // Hide the show more button if there are 2 or fewer ingredients
        section.querySelector('.show-more').style.display = 'none';
        
        // Remove padding if there are 2 or fewer ingredients
        section.classList.add('less-ingredients');
      }
    }

    // Apply the show more/less functionality to each ingredient section
    const ingredientSections = document.querySelectorAll('.ingredient-section');
    ingredientSections.forEach(function (section) {
      handleShowMore(section);
    });
  });
