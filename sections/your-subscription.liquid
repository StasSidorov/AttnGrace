{% if section.settings.subscription_products %}
<div class="build-your-subscription">
	<h2><span>{{ section.settings.section_title }}</span></h2>

	<div class="product-slider">
	 {% for product in collections[section.settings.subscription_products].products %}
	 	{% assign product_image = product.featured_image %}
		<div class="product-item">
			<a class="subscription-item recommended-product" href="{{ product.url | append: '?variant=' | append: product.first_available_variant.id }}">
				<noscript data-rimg-noscript="">
					<img loading="lazy" src="{{ product.featured_image | img_url: 'master' }}" alt="" data-rimg="noscript" srcset="{{ product.featured_image | img_url: 'master' }}" >
				</noscript>
				<img loading="lazy" src="{{ product.featured_image | img_url: 'master' }}"
                          alt="{{ product.title }}"
                          data-rimg="noscript"
                          srcset="{{ product.featured_image | img_url: 'master' }}"
                          class="recommended-product-image">
				<div class="recommended-product-desc">
					<h3 class="recommended-product-title">{{ product.title }}</h3>
                 		{% render 'okendo-reviews-product-rating-summary', product: product %}
						<span class="price">
						from
						<span data-money="">{{ product.price | money  }}</span>
					</span>
				</div>
			</a>
		</div>
	{% endfor %}
	</div>
</div>
{% endif %}
{% schema %}
{
  "name": "Build Subscription",
  "settings": [
    {
        "type": "text",
        "id": "section_title",
        "label": "Title of the Build Your Subscription Section",
        "default": "Build Your Subscription..."
    },
    {
        "type": "collection",
        "id": "subscription_products",
        "label": "Select Subscription Products Collection"
    }
  ]
}

{% endschema %}