<div class="image-bg-with-btn-section"
  style="
  {% if section.settings.bg_image != blank %}
    background-image:url({{section.settings.bg_image | img_url: 'master', scale: 2 }});
  {% endif %}
  {% if section.settings.bg_color != blank %}
    background-color:{{ section.settings.bg_color }};
  {% endif %}"
  
  >
	<div class="image-bg-with-btn-heading">
		{% if section.settings.heading != blank %}
          <h1 style="
                     {% if section.settings.heading_color != blank %}
                     	color:{{ section.settings.heading_color }};
                     {% endif %}" 
          	>{{ section.settings.heading }}</h1>
		{% endif %}

		{% if section.settings.content != blank %}
      <div class="image-bg-with-btn-content"
           style="
                  {% if section.settings.heading_color != blank %}
                  	color:{{ section.settings.content_color }};
                  {% endif %}" 
           >{{ section.settings.content }}</div>
		{% endif %}
      	{% if section.settings.button_link != blank and section.settings.button_label != blank %}
          <a
            class="image-bg-with-btn-button button"
            href="{{ section.settings.button_link }}"
          >
            {{ section.settings.button_label | escape }}
          </a>
        {% endif %}
	</div>
</div>
{% schema %}
  {
    "name": "Img Bg with Text and Btn",
    "class": "index-section",

    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
	    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color"
      },
	  {
        "type": "color",
        "id": "content_color",
        "label": "Content Color"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
        "label": "Content"
      },
	  {
      	"type": "url",
      	"id": "button_link",
      	"label": "Button link"
      },
      {
      	"type": "text",
      	"id": "button_label",
      	"label": "Button label",
      	"default": "Shop now"
      }
    ],

    "presets": [
      {
        "category": "Image",
        "name": "Image Bg With Text and Button"
      }
    ]
  }
{% endschema %} 