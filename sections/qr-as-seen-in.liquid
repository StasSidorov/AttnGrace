<link rel="stylesheet" href="{{ 'qr-as-seen-in.css' | asset_url }}" media="print" onload="this.media='all'">
<div class="logo-list-section">
  <div class="logo-list-wrapper">
    {% if section.settings.title != blank %}
      <div class="logo-list-header">
        <h2>{{ section.settings.title }}</h2>
      </div>
    {% endif %}
    <div class="logo-grid-wrapper">
      {% for block in section.blocks %}
        <div class="logo-wrapper">
          <img src="{{ block.settings.logo | img_url: 'original' }}" loading="lazy" />
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Logo List",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "AS SEEN IN"
      }
    ],
    "blocks": [
      {
        "name": "Logo",
        "type": "logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          }
        ]
      }
    ]
  }
{% endschema %}