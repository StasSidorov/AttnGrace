<style>
.custom-hero-container {
  display: block;
  width: 100%;
  overflow: hidden; /* Hides any part of the image that exceeds the container's width */
  margin: 0;
  padding: 0;
  position: relative; /* Ensures positioning is relative to this container */
}

.custom-hero-image {
  width: 100%;
  height: auto; /* Scales the height automatically to maintain the aspect ratio */
  object-fit: cover; /* Ensures the image covers the area */
  object-position: center; /* Center the image by default */
  display: none; /* Hide images by default */
  z-index: -1; /* Ensure background images stay in the back */
}

.hero-content-container {
  position: absolute;
  top: 50px; /* Adjust based on your needs */
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  text-align: center;
  color: #fff;
  z-index: 1; /* Ensure content is above the background images */
  
}

.main-title {
  font-family: BentonMod, sans-serif;
  color: #000;
}

  .subtitle, .image-column p {
  font-family: Acre-Regular, sans-serif;
  color: #000;
    margin-top: 15px;
}

.main-title {
  font-size: 48px;
  font-weight: 300;
  line-height: 1.2;
  margin: 20px auto 0;
  text-align: left;
  width: 80%;
  padding-right: 20px; /* Add right padding */
  box-sizing: border-box; /* Ensures padding is included in the width */
}

.subtitle {
  font-size: 22px;
  line-height: 25px;
  margin: 15px auto 20px;
  width: 80%;
  text-align: left;
}


.image-columns-container {
  /* background-color: #ffff00; /* Bright yellow for visibility */ */
  padding: 0 20px; /* Adds padding inside the container, affecting space at the sides */
  display: flex;
  justify-content: center; /* Centers the columns in the container */
  /* align-items: center; /* Align items vertically */ */
  align-items: flex-start; /* Ensures children align to the top */
  flex-direction: row; /* Explicitly set to ensure horizontal layout */
  flex-wrap: nowrap; /* Prevents wrapping into a new line */
  gap: 20px; /* Adjust the gap between columns */
  margin: 20px auto; /* Center the container and add space above */
  width: 90%;
}

.image-column {
  /* background-color: #ff0000; /* Bright red for visibility */ */
  flex: 1; /* Each column will grow to fill the space */
  padding: 10px; /* Provides space between the images */
  text-align: center; /* Ensures text is centered under the image */

  display: flex; /* Added */
  flex-direction: column; /* Added */
  align-items: center; /* Ensures center alignment for both img and p */
  max-width: 30%; 
}

.image-column img {
  width: clamp(50px, 10vw, 100px);
  height: auto; /* Fixed height to maintain aspect ratio */
  object-fit: cover; /* Ensures the images cover the area */
  
}

.image-column p {
  font-size: 18px;
  line-height: 25px;
  color: #000;
  margin: 4px 0; /* Adds top and bottom margins */
  box-sizing: border-box;
  font-weight: 400; 
}


/* No changes needed for mobile, but ensure no conflicting styles for PC */



/* Show the desktop image on larger screens */
@media (min-width: 769px) {
  .desktop-hero-image {
    display: block;
  }
.hero-content-container {
    top: 0; /* Decrease top margin for mobile */
    left: 0;
    transform: none;
    text-align: center;
    max-width: 50%; /* Adjust this value if you want a different constraint for larger screens */
  }


}

/* Show the mobile image on smaller screens */
@media (max-width: 768px) {
  .hero-content-container {
  top: 10px; /* Adjust based on your needs */
  }
  
  .mobile-hero-image {
    display: block;
  }
  .main-title, .subtitle {
    width: 100%; /* Allows text to use the entire width of its container */
    margin-left: 12px; /* Resets horizontal margins */
    margin-right: 12px;
    text-align: left; /* Centers the text for mobile */
    font-size: 36px;
  }
  .subtitle {
    font-size: 14px;
    margin-bottom: 0; /* Remove bottom margin for subtitle */
  }
  .image-columns-container {
    margin-top: 0; /* Remove top margin to align closely with subtitle */
    padding: 0 5px; /* Further reduce padding for mobile */
    width: 95%; /* Further increase width for mobile to reduce side gaps */
  }
  .image-column {
  padding: 5px; /* Provides space between the images */
    margin-top: 0; /* Remove top margin for images */
  max-width: 33%; 
  }
  .image-column img {
  width: 70px;
  height: auto; /* Fixed height to maintain aspect ratio */
  object-fit: cover; /* Ensures the images cover the area */
}
  .image-column p {
    font-size: 16px;
    line-height: 1.4;
  }

}

/* Assuming the default styling you've provided remains as the base */

/* Tablet to desktop transition */
  @media (min-width: 768px) and (max-width: 1119px) {
  .hero-content-container {
    /* top: clamp(20px, 5vw, 50px); */
    top: 20px; /* Example fixed adjustment for this specific range */
  }
  .main-title {
    font-size: 36px;
  }
  .subtitle {
    font-size: 15px;
    margin-bottom: 0;
  }
    .image-columns-container {
    margin-top: 0; /* Remove top margin to align closely with subtitle */
    padding-right: 30px;

  }
  .image-column p {
    font-size: 16px;
    line-height: 1.4;
  }
  .image-column img {
    width: 60px;
  }
}
  
@media (min-width: 1200px) and (max-width: 1919px) {
  .hero-content-container {
    /* top: clamp(50px, 5vw, 50px); */
    top: 30px; /* Example fixed adjustment for this specific range */
  }
  .main-title {
    font-size: clamp(36px, 4vw, 60px);
  }
  .image-columns-container {
    margin-top: 0; /* Remove top margin to align closely with subtitle */
    padding-right: 40px;

  }
  .image-column img {
    width: clamp(60px, 8vw, 80px); /* Smaller than on larger screens */
  }
}

/* Larger desktop screens */
@media (min-width: 1920px) {
  .hero-content-container {
    top: clamp(50px, 10vw, 70px); /* Responsive top space */
  }
  .main-title {
    font-size: clamp(60px, 4vw, 80px);
    width: 60%; 
  }
  .subtitle {
    font-size: clamp(22px, 4vw, 25px); 
    width: 60%; 
  }
  .image-column img {
    width: 90px;
  }
}

  .bold {
  font-weight: bold;
}




</style>

<div class="custom-hero-container">
  <!-- New wrapping container -->
  <div class="hero-content-container">
    <div class="hero-text-container">
      <h1 class="main-title">{{ section.settings.main_title }}</h1>
      <p class="subtitle">{{ section.settings.subtitle }}</p>

    </div>

    <!-- Container for the 3 images -->
    <div class="image-columns-container">
      <div class="image-column">
        <img src="{{ section.settings.column_1_image | img_url: '360x' }}" alt="">
        <p>{{ section.settings.column_1_text }}</p>
      </div>
      <div class="image-column">
        <img src="{{ section.settings.column_2_image | img_url: '360x' }}" alt="">
        <p>{{ section.settings.column_2_text }}</p>
      </div>
      <div class="image-column">
        <img src="{{ section.settings.column_3_image | img_url: '360x' }}" alt="">
        <p>{{ section.settings.column_3_text }}</p>
      </div>
    </div>
  </div>

  <!-- Desktop image -->
  <img src="{{ section.settings.background_image_desktop | img_url: '1440x' }}" alt="Hero Image" class="custom-hero-image desktop-hero-image">

  <!-- Mobile image -->
  <img src="{{ section.settings.background_image_mobile | img_url: '375x' }}" alt="Hero Image Mobile" class="custom-hero-image mobile-hero-image">
</div>





