{% comment %}
Custom "call to action" section originally created for UVT Landing Page and other site-wide page use - RK 11.03.2020
Naming convention "cta" used throughout as shorthand for "call to action."
{% endcomment %}

<div class="cta-section"
  style="
  {% if section.settings.text_color != blank %}
    color:{{ section.settings.text_color }};
  {% endif %} 
  {% if section.settings.bg_color != blank %}
    background-color:{{ section.settings.bg_color }};
  {% endif %}"
  >
  <h1 class="cta-heading heading">{{ section.settings.heading }}</h1>
  {% if section.settings.button_link != blank and section.settings.button_label != blank %}
     <a class="image-bg-with-text-button button" href="{{ section.settings.button_link }}">
     	{{ section.settings.button_label | escape }}
     </a>
  {% endif %}
</div>
{% schema %}
  {
    "name": "Call To Action",
    "class": "index-section",
    "settings": [
	  {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
	  {
		"id": "heading",
        "type": "text",
        "label": "Call to Action"
      },
	  {
      	"type": "url",
      	"id": "button_link",
      	"label": "Button link"
      },
      {
      	"type": "text",
      	"id": "button_label",
      	"label": "Button label",
      	"default": "Shop All"
      }
    ],

    "presets": [
      {
        "category": "Promotional",
        "name": "Call to Action Block"
      }
    ]
  }
{% endschema %} 