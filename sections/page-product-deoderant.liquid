{% assign parent = product %}
{% assign parent_collection = collection %}
{% assign ingrediants_briefs = section.settings.briefs_ingredients %}
{% assign ingrediants_pads = section.settings.pads_ingredients %}
{% assign ingrediants_hybrid = section.settings.hybrid_ingredients %}
{% assign ingrediants_liners = section.settings.liners_ingredients %}
{% assign ingrediants_wipes = section.settings.wipes_ingredients %}
{% assign baseingrediants = section.settings.ingredients %}

{% assign subscriptiondetails = section.settings.subscription %}
{% assign sizing_briefs = section.settings.briefs_sizing %}
{% assign sizing_pads = section.settings.pads_sizing %}
{% assign sizing_hybrid = section.settings.hybrid_sizing %}
{% assign sizing_liners = section.settings.liners_sizing %}
{% assign sizing_wipes = section.settings.wipes_sizing %}
{% assign basesizing = section.settings.sizing %}

<div
  data-product-list
  data-gallery-enable-video-looping="{{ section.settings.gallery_enable_video_looping }}"
  {% if section.settings.enable_single %}data-single-product{% endif %}
  {% if collection.products_count < 2 %}class="product-list-single"{% endif %}>

  {%
    include 'product-deoderant',
    show_pagination: false
  %}

  {% if section.settings.enable_single == false %}
    {%
      include 'product-rack',
      parent_collection: parent_collection,
      parent: parent,
      limit: 20
    %}
  {% endif %}
</div>
{% include 'product-moving-text' %}
{% include 'product-ingredients-sustainability' %}
{% include 'product-promise' %}
{% if section.settings.enable_single == true %}
  <div class="recommended-products-single-container" data-product-recommendations-container></div>
{% endif %}
{% render 'okendo-reviews-widget', product: product %}

{% schema %}
{
  "name": "Product pages",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_product_vendor",
      "label": "Show product vendor"
    },
    {
      "type": "checkbox",
      "id": "enable_single",
      "label": "Enable single product view"
    },
    {
      "type": "checkbox",
      "id": "show_spb",
      "label": "Show dynamic checkout button",
      "default": true,
      "info": "Each customer will see their preferred payment method from those available on your store, such as PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)"
    },
    {
      "type": "header",
      "content": "Moving Text"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "paragraph",
      "content": "Learn more about [media types](https://help.shopify.com/en/manual/products/product-media/product-media-types)"
    },
    {
      "type": "checkbox",
      "id": "gallery_enable_video_looping",
      "label": "Enable video looping",
      "default": true
    },
    {
      "type": "page",
      "id": "subscription",
      "label": "Subscription Details"
    },
    {
           "type": "page",
           "id": "sizing",
           "label": "Common Sizing & Specs"
         },
     {
       "type": "page",
       "id": "pads_sizing",
       "label": "Sizing & Specs for Pads"
     },
           {
             "type": "page",
             "id": "briefs_sizing",
             "label": "Sizing & Specs for briefs"
           },
     {
       "type": "page",
       "id": "hybrid_sizing",
       "label": "Sizing & Specs for Hybrid Pads"
     },
     {
       "type": "page",
       "id": "liners_sizing",
       "label": "Sizing & Specs for Liners"
     },
     {
       "type": "page",
       "id": "wipes_sizing",
       "label": "Sizing & Specs for Wipes"
     },
	 {
		"type": "header",
		"content": "About Us Content"
	 }
  ],
  "blocks": [
    {
      "type": "text",
	  "name": "Moving Text",
	  "settings": [
		{
          "type": "text",
		  "id": "text",
		  "label": "Text"
		}
	  ]
	}
  ]
}
{% endschema %}
