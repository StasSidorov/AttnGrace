<section class="reviews">
  <div class="reviews__slogan">Happiness guaranteed! Try us risk-free. ðŸ¤—</div>
  <div class="reviews__image">{{ section.settings.image | img_url : 'master' | img_tag }}</div>
  <div class="reviews__content">
      <div class='center-wrapper'>
          <h2 class="reviews__title">{{ section.settings.heading }}</h2>
          <div class="reviews__row">
            {% for block in section.blocks %}
              <div class="reviews__col">
                  <div class="reviews-item">
                      <div class="reviews-item__text">{{block.settings.text}}</div>
                      <div class="reviews-item__author">{{block.settings.autor}}</div>
                  </div>
              </div>
            {% endfor %}
          </div>
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "Findfit Reviews",
    "settings" : [
      {
        "type" : "image_picker",
        "id" : "image",
        "label" : "Image"
      },
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Heading",
        "default" : "Why women love Attn: Grace"
      },
       {
            "type" : "text",
            "id" : "btn-label",
            "label" : "Button Label",
            "default"   : "FIND YOUR FIT"
        },
        {
            "type" : "url",
            "id" : "btn-link",
            "label" : "Button Link"
        }
    ],
    "blocks" : [
      {
        "type" : "text",
        "name" : "Review",
        "settings" : [
            {
              "type" : "text",
              "id" : "text",
              "label" : "Text",
              "default" : "Love that they are so thin but very absorbent. Great product. Never going back to my old brand."
            },
            {
              "type" : "text",
              "id" : "autor",
              "label" : "Autor",
              "default" : "â€” CANDY K."
            }   
        ]
      }
    ]
  }
{% endschema %}