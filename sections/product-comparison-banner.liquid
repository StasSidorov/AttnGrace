<div class="page-width">
    <div class="compare-banner-wrapper">
        {% for block in section.blocks %}
            <div class="compare-banner {% if block.settings.banner_class != blank %}{{block.settings.banner_class}}{% endif %} {% if block.settings.text_position != blank %}{{block.settings.text_position}}{% endif %}">
                {% if block.settings.compare_banner_text != blank %}
                    <h2>{{ block.settings.compare_banner_text}}</h2>
                {% endif %}
                {% if block.settings.compare_banner_image != blank %}
                    <img src="{{ block.settings.compare_banner_image | img_url: 'master' }}" alt="" />
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Comparison Banner",
    "class": "product-compare-banner",
    "settings": [],
    "blocks": [
        {
          "name": "Compare Banner",
          "type": "banner",
          "settings": [
            {
                "id": "banner_class",
                "type": "text",
                "label": "Banner Class"
            },
            {
                "id": "compare_banner_text",
                "type": "text",
                "label": "Banner Text"
            },
            {
              "id": "compare_banner_image",
              "type": "image_picker",
              "label": "Banner Image"
            },
            {
                "type": "select",
                "id": "text_position",
                "label": "Text Position",
                "options": [
                  {
                    "value": "top-left",
                    "label": "Top Left"
                  },
                  {
                    "value": "bottom-right",
                    "label": "Bottom Right"
                  }
                ],
                "default": "top-left"
            }
          ]
        }
    ]
}
{% endschema %}