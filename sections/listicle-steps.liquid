<section class="reasons-steps">
  <div class='center-wrapper'>
      <div class="reasons-steps__list">
          {% for block in section.blocks %}
          <div class="reasons-steps-item reasons-steps-item_{{forloop.index}}">
              <div class="reasons-steps-item__image">{{ block.settings.image | img_url : "master" | img_tag }}</div>
              <div class="reasons-steps-item__content">
                  <div class="reasons-steps-item__title"><span>{{forloop.index}}</span> {{ block.settings.heading }}</div>
                  <div class="reasons-steps-item__desc">{{ block.settings.text }}</div>                        
                  <a href="{{block.settings.btn-link}}" class="reasons-steps-item__btn btn">{{block.settings.btn-label}}</a>
                  <div class="promo__note">{{block.settings.subtext}}</div>
              </div>
          </div>
          {% endfor %}
      </div>
  </div>
</section>
{% schema %}
  {
    "name": "Listicle Steps",
    "settings" : [],
    "blocks" : [
      {
        "name" : "Step",
        "type" : "text",
        "settings" : [
          {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Image"
          },
          {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading",
            "default" : "50% of adult women have bladder leaks."
          },
           {
            "type" : "text",
            "id" : "text",
            "label" : "Text",
            "default" : "You're not alone, and now there's finally a solution that's tough on leaks, safe on skin and gentler on the planet."
          },     
          {
            "type" : "text",
            "id" : "btn-label",
            "label" : "Button Label",
            "default"   : "GET MY DISCOUNT"
          },
          {
              "type" : "url",
              "id" : "btn-link",
              "label" : "Button Link"
          },
          {
            "type" : "text",
            "id" : "subtext",
            "label" : "SubText",
            "default" : "*Discount automatically applied at checkout"
        }
        ]
      }
    ]
  }
{% endschema %}

