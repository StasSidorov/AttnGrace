{% comment %}
"As Seen In" section created for UVT Landing Page and other site-wide promotional use.
Naming convention "asi" used throughout as shorthand for "as seen in." 
{% endcomment %}

<div
  class="asi-section"
  style="
  {% if section.settings.bg_color != blank %}
    background-color:{{ section.settings.bg_color }};
  {% endif %}">
  <h2 class="asi-heading">{{ section.settings.heading }}</h2>
  <div class="asi-logo-container">
    {% for block in section.blocks %}
      <div class="asi-column">
        <img
          loading="lazy"
          class="asi-image"
          src="{{ block.settings.promo_logo_1 | img_url: 'grande' }}" />
        <img
          loading="lazy"
          class="asi-image"
          src="{{ block.settings.promo_logo_2 | img_url: 'grande' }}" />
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "As Seen In",
    "class": "index-section",
    "max_blocks": 3,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Logo Image Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "promo_logo_1",
            "label": "Logo Image"
          }, {
            "type": "image_picker",
            "id": "promo_logo_2",
            "label": "Logo Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Promotional",
        "name": "As Seen In"
      }
    ]
  }
{% endschema %}