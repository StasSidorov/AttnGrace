<div class="page-width">
    <div class="comparision-difference">
        {% if section.settings.heading != blank %}
            <h2 class="heading">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="column-wraper">
            {% for block in section.blocks %}
                {%- assign block-image = block.settings.column_image -%}
                <div class="icon-column">
                    <div class="col-inner">
                        <div class="icon">
                          {% if block.settings.icon_image == 'quick-absorption' %}
                          <img class="icon" src='{{ 'lightning-quick-absorption.svg' | asset_url }}' loading="lazy" />
                          {% elsif block.settings.icon_image == 'plant-based' %}
                          <img class="icon" src='{{ 'plant-based-top-sheets.svg' | asset_url }}' loading="lazy" />
                          {% elsif block.settings.icon_image == 'free-of' %}
                          <img class="icon" src='{{ 'free-of.svg' | asset_url }}' loading="lazy" />
                          {% elsif block.settings.icon_image == 'moisture-wicking' %}
                          <img class="icon" src='{{ 'advanced-moisture-wicking.svg' | asset_url }}' loading="lazy" />
                          {% elsif block.settings.icon_image == 'dermatologist-tested' %}
                          <img class="icon" src='{{ 'dermatologist-tested.svg' | asset_url }}' loading="lazy" />
                          {% elsif block.settings.icon_image == 'designed-by-women' %}
                          <img class="icon" src='{{ 'by-women.svg' | asset_url }}' loading="lazy" />
                          {% endif %}
                        </div>
                        <h3 class="title">{{ block.settings.title }}</h3>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Icon with text column",
  "class": "comparison-text-icon",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Attn: Grace Difference"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "icon_image",
          "label": "Image Icon Name"
        }
      ]
	  }
  ],
  "presets": [
    {
      "category": "Custom Blocks",
      "name": "Icon with Text Column"
    }
  ]
}

{% endschema %}