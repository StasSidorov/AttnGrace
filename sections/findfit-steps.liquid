<section class="steps">
  <div class='center-wrapper'>
      <h2 class="steps__title">{{section.settings.heading}}</h2>
      <div class="steps__row">
        {% for block in section.blocks %}
          <div class="steps__col">
              <div class="steps-item">
                  <div class="steps-item__number">{{ forloop.index }}</div>
                  <div class="steps-item__title">{{ block.settings.title }}</div>
                  <div class="steps-item__desc">{{ block.settings.text }}</div>
              </div>
          </div>
        {% endfor %}
      </div>
      <div class="steps__btn">
          <a href="{{ section.settings.btn-link }}" class="btn btn_white">{{ section.settings.btn-label }}</a>
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "Findfit Steps",
    "settings" : [
      {
        "type" : "image_picker",
        "id" : "image",
        "label" : "Image"
      },
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Heading",
        "default" : "Ordering Made Easy"
      },
       {
            "type" : "text",
            "id" : "btn-label",
            "label" : "Button Label",
            "default"   : "FIND YOUR FIT"
        },
        {
            "type" : "url",
            "id" : "btn-link",
            "label" : "Button Link"
        }
    ],
    "blocks" : [
      {
        "type" : "text",
        "name" : "Step",
        "settings" : [
            {
              "type" : "text",
              "id" : "title",
              "label" : "Title",
              "default" : "One-Time Purchase"
            },
            {
              "type" : "text",
              "id" : "text",
              "label" : "Text",
              "default" : "Pick the products that suit your needs and check out. No subscription required."
            }   
        ]
      }
    ]
  }
{% endschema %}